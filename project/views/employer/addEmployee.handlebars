<!-- Card provides form to enter train shedule -->
<div class="card mb-3 border-primaryn">
    <div class="card-header bg-primary text-white text-center">
        <b>Add Employee</b>
    </div>
    <form name="frm" id="add-form" class="form-addAnEmployee m-2">
        <div class="form-group">
            <label for="employeeName">Employee Name</label>
            <input type="Text" class="form-control" id="employeeName" placeholder="Enter Employee Name" required />
        </div>
        <div class="form-group">
            <label for="employeeDepartment">Employee Department</label>
            <input type="Text" class="form-control" id="employeeDepartment" placeholder="Enter Employee Department" required />
        </div>
        <div class="form-group">
            <label for="employeePosition">Employee Position</label>
            <input type="Text" class="form-control" id="employeePosition" placeholder="Enter Employee Position" required />
        </div>
        <div class="form-group">
            <label for="employeeAddress">Employee Address</label>
            <input type="Text" class="form-control" id="employeeAddress" placeholder="Employee Address" required />
        </div>
        <div class="form-group">
            <label for="employeeContactNumber">Employee Contact Number</label>
            <input type="Text" class="form-control" id="employeeContactNumber" placeholder="Enter Employee Contact Number" required />
        </div>
         <div class="form-group">
            <label for="employeeDOB">Employee Date of Birth</label>
            <input type="Text" class="form-control" id="employeeDOB" placeholder="Enter employee dob" required />
        </div>
          <div class="form-group">
            <label for="employeeImage">Employee Image</label>
            <input type="Text" class="form-control" id="employeeImage" placeholder="Enter employee image address" required />
        </div>
        <button id="addEmployeeBtn" type="submit" class="btn btn-primary">
            Submit
        </button>
    </form>

    <p id="employeeAddResultSuccess" class="alert alert-danger invisible" role="alert"></p>
    <p id="employeeAddResultNotSuccess" class="alert alert-success invisible" role="alert"></p>

</div>

<!-- jQuery -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/addEmployee.js"></script>
